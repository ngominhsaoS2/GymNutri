<div class="modal fade" id="add-edit-modal" role="dialog">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"><span id="spAddEdit">Add / Edit</span> User</h5>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">
                <form role="form" id="frmMaintainance">
                    <div class="row" hidden>
                        <input type="hidden" id="hidId" value="" />
                    </div>
                    <div class="row">
                        <div class="col-md-4">
                            <div class="form-group">
                                <label>Username</label>
                                <input type="text" class="form-control form-control-sm" id="txtmdUserName" name="txtmdUserName" />
                            </div>
                            <div class="form-group">
                                <label>Email</label>
                                <input type="email" class="form-control form-control-sm" id="txtmdEmail" name="txtmdEmail" />
                            </div>
                            <div class="form-group">
                                <label>Password</label>
                                <input type="password" class="form-control form-control-sm" id="txtmdPassword" name="txtmdPassword" />
                            </div>
                            <div class="form-group">
                                <label>Confirm password</label>
                                <input type="password" class="form-control form-control-sm" id="txtmdConfirmPassword" name="txtmdConfirmPassword" />
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label>Full name</label>
                                <input type="text" class="form-control form-control-sm" id="txtmdFullName" name="txtmdFullName" />
                            </div>
                            <div class="form-group">
                                <label>Phone</label>
                                <input type="text" class="form-control form-control-sm" id="txtmdPhoneNumber" name="txtmdPhoneNumber" />
                            </div>
                            <div class="form-group">
                                <label>Birthday</label>
                                <input type="text" class="form-control form-control-sm datepicker" id="txtmdBirthday" name="txtmdBirthday" />
                            </div>
                            <div class="form-group">
                                <label>Gender</label><br />
                                <div class="form-group form-inline">
                                    <div class="checkbox">
                                        <label>
                                            <input type="checkbox" class="flat-red" id="ckMale" name="ckMale"> &nbsp;
                                            <span class="text p-r-15">Male</span>
                                        </label>
                                    </div>
                                    <div class="checkbox">
                                        <label>
                                            <input type="checkbox" class="flat-red" id="ckFemale" name="ckFemale"> &nbsp;
                                            <span class="text p-r-15">Female</span>
                                        </label>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label>Image</label>
                                <div class="input-group" id="grInput" data-toggle="tooltip">
                                    <input type="text" id="txtmdImage" name="txtmdImage" class="form-control form-control-sm" disabled />
                                    <input type="file" id="fileInputImage" style="display:none" />
                                    <span class="input-group-btn">
                                        <input type="button" id="btnSelectImg" class="btn btn-xs btn-info" value="Browser" />
                                    </span>
                                </div>
                                <div class="square-div">
                                    <div class="square-div-content img-responsive" id="imgUser"></div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label>Roles</label><br />
                                <div id="list-roles" class="form-group form-inline"></div>
                                <script id="role-template" type="x-tmpl-mustache">
                                    <div class="checkbox">
                                        <label>
                                            <input type="checkbox" class="flat-red" name="ckRoles" value="{{Name}}" {{Checked}}> &nbsp;
                                            <span class="text p-r-15">{{Name}}</span>
                                        </label>
                                    </div>
                                </script>
                            </div>
                            
                            <div class="form-group">
                                <label>Active</label><br />
                                <input type="checkbox" class="flat-red" id="ckActive" name="ckActive">
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-xs btn-success" id="btnSave"><i class="fa fa-floppy-o"></i>&nbsp;  Save</button>
                <button type="button" class="btn btn-xs btn-danger" data-dismiss="modal"><i class="fa fa-times"></i>&nbsp;  Close</button>
            </div>
        </div>
    </div>
</div>