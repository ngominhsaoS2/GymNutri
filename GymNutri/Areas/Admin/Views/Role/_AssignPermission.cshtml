<div class="modal fade" id="assign-permission-modal" role="dialog">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Assign permissions for: <span id="spAssignedRole"></span></h5>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">
                <form role="form" id="frmAssignPermission">
                    <div class="row" hidden>
                        <input type="hidden" id="hidRoleId" value="" />
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <table class="table table-hover tree" id="tblFunction">
                                <thead class="bordered-darkorange">
                                    <tr>
                                        <th>Function</th>
                                        <th>
                                            <input type="checkbox" id="ckCheckAllView" value="{{Id}}">
                                            <span class="text">View</span>
                                        </th>
                                        <th>
                                            <input type="checkbox" id="ckCheckAllCreate" value="{{Id}}">
                                            <span class="text">Create</span>
                                        </th>
                                        <th>
                                            <input type="checkbox" id="ckCheckAllEdit" value="{{Id}}">
                                            <span class="text">Update</span>
                                        </th>
                                        <th>
                                            <input type="checkbox" id="ckCheckAllDelete" value="{{Id}}">
                                            <span class="text">Delete</span>
                                        </th>
                                    </tr>
                                </thead>
                                <tbody id="lst-data-function"></tbody>
                            </table>
                            <script id="result-data-function" type="x-tmpl-mustache">
                                <tr class="treegrid-{{Id}} {{treegridparent}}" data-id="{{Id}}">
                                    <td>{{Name}}</td>
                                    <td><input type="checkbox" value="{{Id}}" class="ckView"></td>
                                    <td><input type="checkbox" value="{{Id}}" class="ckAdd"></td>
                                    <td><input type="checkbox" value="{{Id}}" class="ckEdit"></td>
                                    <td><input type="checkbox" value="{{Id}}" class="ckDelete"></td>
                                </tr>
                            </script>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-xs btn-success" id="btnSavePermission"><i class="fa fa-floppy-o"></i>&nbsp;  Save</button>
                <button type="button" class="btn btn-xs btn-danger" data-dismiss="modal"><i class="fa fa-times"></i>&nbsp;  Close</button>
            </div>
        </div>
    </div>
</div>