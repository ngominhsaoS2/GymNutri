
@{
    ViewData["Title"] = "Customer";
}

@section Styles{
    <link href="~/admin-template/css/slider-color.css" rel="stylesheet" />
}

@section Scripts{
    <script src="~/admin-app/controllers/customer/body-index.js" asp-append-version="true"></script>
    <script src="~/admin-app/controllers/customer/user-location.js" asp-append-version="true"></script>
    <script src="~/admin-app/controllers/customer/user-desire.js" asp-append-version="true"></script>
    <script src="~/admin-app/controllers/customer/index.js" asp-append-version="true"></script>
    <script>
        bodyIndex.initialize();
        userLocation.initialize();
        userDesire.initialize();
        customer.initialize();
    </script>
}

@section PageTitle {
    <div class="page-title-area">
        <div class="row align-items-center p-t-5 p-b-5">
            <div class="col-sm-12">
                <div class="breadcrumbs-area clearfix">
                    <h4 class="page-title pull-left">Customer</h4>
                    <ul class="breadcrumbs pull-left">
                        <li><a href="/Admin/Home/Index">Home</a></li>
                        <li><span>Customer</span></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
}

<div class="row">
    <div class="col-md-12 m-t-30">
        <div class="card">
            <div class="card-body p-t-15">
                <div class="row p-b-6">
                    <div class="col-md-12">
                        <div class="pull-left form-inline">
                            <div class="input-group input-group-sm m-r-7">
                                <div data-toggle="tooltip" title="Open/Close more filters">
                                    <button class="btn btn-xs btn-default pointer m-r-7" data-toggle="collapse" data-target="#filter"><i class="fa fa-filter"></i></button>
                                </div>
                                <input class="form-control" id="txtKeyword" placeholder="Keyword" />
                                <button class="btn btn-xs btn-primary btn-flat" id="btnSearch" data-toggle="tooltip" title="Search"><i class="fa fa-search"></i>&nbsp; Search</button>
                                <button class="btn btn-xs btn-secondary btn-flat" id="btnErase" data-toggle="tooltip" title="Erase all filters"><i class="fa fa-undo"></i>&nbsp; Erase</button>
                            </div>
                            <ul class="list-inline" id="ulSearched"></ul>
                        </div>
                        <div class="pull-right">

                        </div>
                    </div>
                </div>
                <div class="row collapse p-b-6" id="filter">
                    <div class="col-md-12">
                        <div class="border-bottom">
                            <div class="row">
                                <div class="col-md-3">
                                    <div class="form-group">
                                        <label>Sort by</label>
                                        <select class="form-control form-control-sm" id="ddlSortBy">
                                            <option value="">-- Sort by --</option>
                                            <option value="Username">Username</option>
                                            <option value="Email">Email</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="form-group">

                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="single-table">
                    <div class="table-responsive">
                        <table class="table table-sm table-bordered table-hover" id="tbl-customer">
                            <thead class="text-uppercase">
                                <tr>
                                    <th class="sortable" data-id="0">UserName</th>
                                    <th class="sortable" data-id="1">Email</th>
                                    <th class="sortable" data-id="2">FullName</th>
                                    <th class="sortable" data-id="3">PhoneNumber</th>
                                    <th class="sortable" data-id="5">DateCreated</th>
                                    <th class="sortable" data-id="6">Action</th>
                                </tr>
                            </thead>
                            <tbody id="tbody-customer"></tbody>
                        </table>
                        <script id="template-customer" type="x-tmpl-mustache">
                            <tr>
                                <td>{{UserName}}</td>
                                <td class="w-20">{{Email}}</td>
                                <td>{{FullName}}</td>
                                <td>{{PhoneNumber}}</td>
                                <td>{{DateCreated}}</td>
                                <td class="minw-100">
                                    <div class="btn-group btn-group-sm">
                                        <a class="btn btn-xs btn-light btn-body-index" data-id="{{Id}}" data-toggle="tooltip" title="Body index"><i class="fa fa-male"></i></a>
                                        <a class="btn btn-xs btn-light btn-location" data-id="{{Id}}" data-toggle="tooltip" title="Location"><i class="fa fa-map-marker"></i></a>
                                        <a class="btn btn-xs btn-light btn-desire" data-id="{{Id}}" data-toggle="tooltip" title="Customer desires"><i class="fa fa-arrow-circle-up"></i></a>
                                        <a class="btn btn-xs btn-light btn-food" data-id="{{Id}}" data-toggle="tooltip" title="Favorite foods"><i class="fa fa-cutlery"></i></a>
                                    </div>
                                </td>
                            </tr>
                        </script>
                    </div>
                    <!--Pagination-->
                    <br />
                    <div class="row">
                        <div class="col-sm-5">
                            <div class="dataTables_info" id="datatable-checkbox_info" role="status" aria-live="polite">
                                <select id="ddlShowPage">
                                    <option value="10" selected="selected">10</option>
                                    <option value="20">20</option>
                                    <option value="30">30</option>
                                    <option value="50">50</option>
                                </select>
                                <span class="item-per-page">
                                    All records: <strong id="lblTotalRecords"></strong>
                                </span>
                            </div>
                        </div>
                        <div class="col-sm-7">
                            <div class="dataTables_paginate paging_simple_numbers float-right" id="datatable-checkbox_paginate">
                                <ul id="paginationUL"></ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@Html.Partial("_BodyIndexModal.cshtml")
@Html.Partial("_LocationModal.cshtml")
@Html.Partial("_DesireModal.cshtml")